#include <bits/stdc++.h>

using namespace std;

int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        double x;
        cin>>x;
        double tong=0.0;
        double tuso=1.0;
        double mauso=0.0;
        for(int i=1;i<=n;i++)
        {
            tuso=pow(x,i);
            mauso+=i;
            tong+=(tuso/mauso);
        }
        cout<<fixed<<setprecision(3)<<tong<<endl;
//dòng 24 là ép kiểu để in ra 3 số thập phân đằng sau
    }
    return 0;
}
